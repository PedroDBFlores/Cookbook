{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/",
    "strict": true,
    "incremental": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES2019",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "paths": {
      "@webapp/components/*": [
        "./components"
      ],
      "@webapp/features/*": [
        "./features"
      ],
      "@webapp/model/*": [
        "./model"
      ],
      "@webapp/services/*": [
        "./services"
      ],
      "@webapp/utils/*": [
        "./utils"
      ]
    }
  }
}